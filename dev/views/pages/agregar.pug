extends ../templates/template.pug

block main
  .main-container
    .container-title
      a(href="index.html").container-title__link Home
      h1.container-title__title Agregar Conejo

    .container-formulario
      form(action="#").container-formulario__formularioAgregar#formularioAgregar

        .container-formulario__formularioAgregar__text-field
          label(for="selectSexo") Sexo:
          select(name="selectSexo" required)#selectSexo
            option(value="Seleccione") Seleccione
            option(value="Macho") Macho
            option(value="Hembra") Hembra   
                
        .container-formulario__formularioAgregar__container-button

    .container-error#container-error
      p.container-error__parrafo#container-error__parrafo